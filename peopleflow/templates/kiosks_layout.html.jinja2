{% extends "layout.html.jinja2" %}
{% block headerbox %}{% endblock %}

{% block pageheaders %}
<link rel="stylesheet" type="text/css" href="/static/css/kiosks.css">
{% if event %}
<style type="text/css">
	{% for color in [1, 2, 3] %}
		{% if event.color(color) %}
		.template_color_{{ color }} {color: {{ event.color(color) }} !important; }
		{% endif %}
	{% endfor %}
</style>
{% endif %}
{% endblock %}

{% block basecontent %}{% endblock %}

{% block footerscripts %}
<script>
toastr.options.positionClass = "toast-bottom-right";
</script>
<script src="http://127.0.0.1:8008/assets/js/lib.js"></script>
<script src="/static/js/rfid/init.js"></script>
{% endblock %}

{% block footer %}
    {% block footer_logo %}
    <div id="footerlogo">
        {%- block footer_logo_image %}
        <img src="{{ url_for('baseframe.static', filename='img/logo@2x.png') }}">
        {%- endblock %}
    </div>
    {% endblock %}
{% endblock %}